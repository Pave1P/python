def insertion_sort(arr):
    # Внешний цикл проходит по каждому элементу массива, начиная со второго
    for i in range(1, len(arr)):
        # Внутренний цикл сдвигает элементы вправо, пока не найдет нужное место для arr[i]
        for j in range(i, 0, -1):
            if arr[j] < arr[j - 1]:
                # Меняем элементы местами
                arr[j], arr[j - 1] = arr[j - 1], arr[j]
            else:
                # Если порядок правильный, выходим из внутреннего цикла
                break

# Пример использования
arr = [12, 11, 13, 5, 6]
print("До сортировки:", arr)
insertion_sort(arr)
print("После сортировки:", arr)
